<%- include('partials/header') -%>
  <div class="container">
    <% let user=users.find(x=> x.id == posts[i].user)%>
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled h-50">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="feedPost col-6 justify-content-between mt-4">
            <p class="text-center">
              <a href="/getUserProfile/<%=user._id%>">
                <%= user.userName%>
              </a>
            </p>
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid h-75 mx-auto d-block img-thumbnail" src="<%= posts[i].image%>">
            </a>
            <div class = 'd-flex mx-5 my-3 container'>
              <span class = 'mx-4'> </span>
              <span class = 'mx-4'><%=posts[i].likes%></span>
              <form action="/post/likeFeedPost/<%=posts[i]._id%>?_method=PUT" method='POST'>
                <button class='fa fa-heart btn-primary ml-5'></button>
              </form></div>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>