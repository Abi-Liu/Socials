<%- include('partials/header') -%>
  <div class="container">
    <% let user%>
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled h-50">
        <% for(var i=0; i<posts.length; i++) {%>
          <%user=users.find(x=> x.id == posts[i].user)%>
          <li class="feedPost col-6 justify-content-between mt-2">
            <p class = 'fw-bold'>
              <a href="/getUserProfile/<%=user._id%>">
                <%= user.userName%>
              </a>
            </p>
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid h-75 mx-auto d-block img-thumbnail" src="<%= posts[i].image%>">
            </a>
            <div class = 'd-flex my-2'>
              <span class = 'mx-3'><%=posts[i].likes%></span>
              <form class = 'ml-3' action="/post/likeFeedPost/<%=posts[i]._id%>?_method=PUT" method='POST'>
                <button class='fa fa-heart btn-primary ml-3'></button>
              </form>
            </div>
            <div class = 'd-flex '>
              <p class = 'fw-bold'><a class='mx-2' href="/getUserProfile/<%=user._id%>">
                <%= user.userName%>
              </a></p>
              <p class = 'd-block text-truncate'><%= posts[i].caption%></p>
            </div>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>