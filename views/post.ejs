<%- include('partials/header') -%>
<div>
  <%- include('partials/navbar') -%>
  
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div id = 'postDiv' class="col-6 mb-5">
        <h2><%= post.title %></h2>
        <img class="img-fluid h-100" src="<%= post.image%>" />
        <div class="row justify-content-between">
          <form
            class="col-1"
            action="/post/likePost/<%= post.id %>?_method=PUT"
            method="POST"
          >
            <button class="btn btn-primary fa fa-heart" type="submit"></button>
          </form>
          <h3 class="col-3">Likes: <%= post.likes %></h3>
          <%if(post.user == user.id){ %>
          <form
            action="/post/deletePost/<%= post.id %>?_method=DELETE"
            method="POST"
            class="col-3"
          >
            <button class="btn btn-primary fa fa-trash" type="submit"></button>
          </form>
          <%}%>
        </div>
      </div>
      <div class="col-3 mt-5">
        <p><%= post.caption %></p>
      </div>
      <div class="mt-5 mb-3">
        <h2>Add a Comment</h2>
        <form action="/comment/createComment/<%=post.id%>" method="POST">
          <div class="mb-3">
            <textarea class="form-control" id = 'comment' name="comment"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div>
        <ul class = 'w-50'>
          <% comments.forEach(comment=> { %>
            <li class = 'mb-3 d-flex justify-content-between'>
              <div>
                <span><%= allUsers.find((item) => item.id === String(comment.user)).userName%>:</span> 
                <span><%=comment.comment%></span>
              </div>
              <div class = 'd-flex'>
                <span class = mx-2><%= comment.likes%></span>
                <form action="/comment/likeComment/<%= comment.id %>?_method=PUT" method="POST">
                  <button class="mx-2 btn btn-primary fa fa-heart" type="submit"></button>
                </form>
                <form action="/comment/deleteComment/<%= comment.id %>?_method=DELETE" method="POST">
                  <button class="mx-2 btn btn-primary fa fa-trash" type="submit"></button>
                </form>
              </div>
            </li>
          <%})%>
        </ul>
      </div>
      <div class="col-6 mt-5">
        <a class="btn btn-primary" href="/profile">Return to Profile</a>
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div>
    </div>
  </div>

</div>

<%- include('partials/footer') -%>
